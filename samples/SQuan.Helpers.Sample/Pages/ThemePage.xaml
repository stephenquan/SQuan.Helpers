<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SQuan.Helpers.Sample.ThemePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sqm="clr-namespace:SQuan.Helpers.Maui;assembly=SQuan.Helpers.Maui"
    Title="ThemePage">
    <ScrollView>
        <VerticalStackLayout Padding="30,30,30,250" Spacing="25">
            <Label
                HorizontalOptions="Center"
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" />

            <Image
                x:Name="logoImage"
                HeightRequest="32"
                WidthRequest="32" />

            <sqm:IconButton
                Clicked="OnToggleTheme"
                Icon="{x:Static sqm:LucideIcons.Globe}"
                Text="Toggle Theme" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
